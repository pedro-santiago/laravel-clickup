{
    "name": "pedro-santiago/laravel-clickup",
    "description": "",
    "keywords": [
        "pedro-santiago",
        "laravel-clickup"
    ],
    "homepage": "https://github.com/pedro-santiago/laravel-clickup",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pedro Santiago",
            "email": "pedro@idez.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "PedroSantiago\\LaravelClickup\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PedroSantiago\\LaravelClickup\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "PedroSantiago\\LaravelClickup\\LaravelClickupServiceProvider"
            ],
            "aliases": {
                "LaravelClickup": "PedroSantiago\\LaravelClickup\\LaravelClickupFacade"
            }
        }
    }
}
